{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest All",
      "program": "${workspaceRoot}/../../node_modules/jest/bin/jest",
      "args": ["--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "skipFiles": [
        "<node_internals>/**/*.js",
        "**/jasmineAsyncInstall.js",
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest All: Coverage",
      "program": "${workspaceRoot}/../../node_modules/jest/bin/jest",
      "args": ["--runInBand", "--coverage"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "skipFiles": [
        "<node_internals>/**/*.js",
        "**/jasmineAsyncInstall.js",
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest All: Debug",
      "program": "${workspaceRoot}/../../node_modules/jest/bin/jest",
      "args": ["--runInBand", "--coverage"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "env": {
        "DEBUG": "niem"
      },
      "skipFiles": [
        "<node_internals>/**/*.js",
        "**/jasmineAsyncInstall.js",
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current File",
      "program": "${workspaceRoot}/../../node_modules/jest/bin/jest",
      "args": [
        "${fileBasenameNoExtension}",
        "--config",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "skipFiles": [
        "<node_internals>/**/*.js",
        "**/jasmineAsyncInstall.js",
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Load 5.0 Release",
      "program": "${workspaceRoot}/../../node_modules/jest/bin/jest",
      "args": [
        "load.test.js",
        "--config",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "skipFiles": [
        "<node_internals>/**/*.js",
        "**/jasmineAsyncInstall.js",
      ],
    },
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "program": "${workspaceRoot}/../../node_modules/jest/bin/jest",
      "cwd": "${workspaceFolder}",
      "args": ["--runInBand", "--watchAll=false", "${workspaceFolder}/test"],
      "skipFiles": [
        "<node_internals>/**/*.js",
        "**/jasmineAsyncInstall.js"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Current File",
      "program": "${file}",
      "skipFiles": [
        "<node_internals>/**/*.js",
        "**/jasmineAsyncInstall.js",
      ],
    },
  ]
}